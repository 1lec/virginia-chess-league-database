<!-- games.hbs -->
<h1>The server is running!</h1>
<p>If you see this text, the server is <strong>definitely</strong> working!</p>

<h2>Games Table</h2>
{{!-- Create Games Table --}}
<table id="games-table">
    {{!-- Games Table Header --}}
    <thead>
        {{!-- make first row of table the column names --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Games Table Body/Rows --}}
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.gameID}}</td>
            <td>{{this.whiteID}}</td>
            <td>{{this.whiteRating}}</td>
            <td>{{this.blackID}}</td>
            <td>{{this.blackRating}}</td>
            <td>{{this.ecoCode}}</td>
            <td>{{this.seasonID}}</td>
            <td>{{this.resultID}}</td>
            <td>{{this.gameDate}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new game, please enter their information below and click 'Submit'</p>
<form id="createGame-form-ajax">
    <label for="input-whiteFullName"> White Pieces: </label>
    <select name="input-whiteFullName" id="mySelect" required>
        <option value="test">Select</option>
        {{#each data}}
        <option value="{{this.id}}">{{this.firstName}} {{this.lastName}}</option>
        {{/each}}
    </select>

    <label for="input-blackFullName"> Black Pieces: </label>
    <select name="input-blackFullName" id="mySelect" required>
        <option value="test">Select</option>
        {{#each data}}
        <option value="{{this.id}}">{{this.firstName}} {{this.lastName}}</option>
        {{/each}}
    </select>

    <label for="input-gameResult">Result:</label>
    <select name="input-gameResult" id="mySelect">
        <option value="test">Select</option>
        {{#each data}}
        <option value="{{this.id}}">{{this.firstName}}</option>
        {{/each}}
    </select>

    <label for="input-gameEcoCode">ECO Code:</label>
    <input type="text" name="input-gameEcoCode" id="input-gameEcoCode" maxlength="3">
    
    <label for="input-gameDate">Date:</label>
    <input type="date" name="input-gameDate" id="input-gameDate" required>

    <label for="input-gameSeason">Season:</label>
    <select name="input-gameSeason" id="mySelect" required>
        <option value="test">Select</option>
        {{#each data}}
        <option value="{{this.id}}">{{this.seasonName}}</option>
        {{/each}}
    </select>

    <label for="input-gameLocation">Location:</label>
    <input type="text" name="input-gameLocation" id="input-gameLocation">

    <input type="submit">
</form>

{{!-- the below line embeds javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add-game.js"></script>