{{!-- Create a table --}}
<table id="players-table">
    {{!-- Table Header section--}}
    <thead>
        {{!-- make first row of table the column names --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Table body section --}}
    <tbody>
        {{!-- for each row, print playerID, firstName, lastName, rating, birthday, and country --}}
        {{#each data}}
        <tr data-value={{this.playerID}}>
            <td>{{this.playerID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.rating}}</td>
            <td>{{this.birthday}}</td>
            <td>{{this.country}}</td>
            <td><button onclick="deletePlayer({{this.playerID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

