<h2>Seasons Table</h2>
{{!-- Create Seasons Table --}}
<table id="seasons-table">
    {{!-- Seasons Table Header --}}
    <thead>
        {{!-- make first row of table the column names --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Seasons Table Body/Rows --}}
    <tbody>
        {{#each data}}
        <tr data-value={{this.seasonID}}>
            <td>{{this.seasonName}}</td>
            <td><button onclick="deleteSeason({{this.id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_season.js"></script>

{{!-- Form to add a record to the table --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new Season, please enter the season's name and click 'Submit'</p>
<form id="createSeason-form-ajax">
    <label for="input-seasonName">Season Name:</label>
    <input type="text" name="input-seasonName" id="input-seasonName" required>

    <input type="submit">
</form>

{{!-- the below line embeds javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add-season.js"></script>